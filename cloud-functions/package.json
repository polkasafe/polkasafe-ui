    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.3.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "discord-interactions": "^3.4.0",
    "discord.js": "^14.11.0",
    "ejs": "^3.1.9",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^4.1.1",
    "html-to-text": "^9.0.5",
    "node-telegram-bot-api": "^0.61.0",
